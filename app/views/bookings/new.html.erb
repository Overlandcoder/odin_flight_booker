<h2>Purchase Flight</h2>

<%= form_with model: @booking do |form| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being created:</h2>
      <ul>
        <% @booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= "#{@flight.departure_airport.code} to #{@flight.arrival_airport.code}" %><br>
  <%= @flight.departure_time.strftime("%m/%d/%Y - %H:%M") %><br>
  <%= "Flight ID: #{@flight.id}" %><br><br>

  <% (1..@passengers.to_i).each do |passenger_number| %>
    <h3><%= "Passenger #{passenger_number} Info" %></h3>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :email %>
    <%= form.text_field :email %>
  <% end %>
<% end %>

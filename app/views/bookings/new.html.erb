<h2>Purchase Flight</h2>

<%= form_with model: @booking do |form| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being created:</h2>
      <ul>
        <% @booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <b><%= "#{@flight.departure_airport.code} to #{@flight.arrival_airport.code}" %></b><br>
  <%= @flight.departure_time.strftime("%m/%d/%Y - %H:%M") %><br>
  <%= "Flight ID: #{@flight.id}" %><br><br>

  <% (1..@num_of_passengers.to_i).each do |passenger_number| %>
    <h4><%= "Passenger #{passenger_number} Info" %></h4>
    <%= form.fields_for :passengers do |sub_form|  %>
      <%= form.hidden_field :flight_id, value: @flight.id %>
      <%= sub_form.label :name %>
      <%= sub_form.text_field :name %>
      <%= sub_form.label :email %>
      <%= sub_form.text_field :email %>
    <% end %>
  <% end %>
  <br><br><%= form.submit "Book" %>
<% end %>

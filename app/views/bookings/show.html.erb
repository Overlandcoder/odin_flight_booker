<div class="container mt-2 p-4 rounded" style="max-width: 500px">
  <h3 class="text-center">Your flight has been booked!</h3>

    <div class="mt-3 p-3 border border-success rounded">
      <div>
        <h4>
          <%= "#{@booking.flight.departure_airport.city} (#{@booking.flight.departure_airport.code}) to
              #{@booking.flight.arrival_airport.city} (#{@booking.flight.arrival_airport.code})" %>
        </h4>
      </div>
      <div>
        <%= "Departure: #{@booking.flight.departure_date_formatted} - #{@booking.flight.departure_time_formatted}" %>
      </div>
      <div>
        <%= "Duration: #{@booking.flight.duration.to_i} hours" %>
      </div>
      <div>
        <%= "Flight Number: #{@booking.flight.id}" %>
      </div>
    </div>

    <% @booking.passengers.each_with_index do |passenger, passenger_number| %>
      <div class="mt-4 p-3 bg-light border rounded">
        <h4><%= "Passenger #{passenger_number + 1} Information" %></h4>
        <hr class="mt-0">

        <div class="mb-3">
          <h5><%= "Name" %></h5>
          <div><%= passenger.name.titleize %></div>
        </div>

        <h5><%= "Email" %></h5>
        <div><%= passenger.email %></div>
      </div>
    <% end %>
  </div>
</div>
